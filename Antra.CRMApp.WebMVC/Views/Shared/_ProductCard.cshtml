@model ProductResponseModel
 
<div class="col mb-3">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text">Price : $@Model.UnitPrice</p>
                    <p>
                        @{
                        var availability = "In stock";
                            if(@Model.Discontinued)
                            {
                                 availability = "Out of stock";
                            }
                        }
                        @availability
                    </p>
                    <a asp-action="Edit" asp-controller="Product" asp-route-id="@Model.Id"  class="btn btn-primary">Edit</a>
                <a class="btn bg-danger" asp-action="Delete" asp-controller="Product" asp-route-id="@Model.Id" >Delete</a>
                <a class="btn bg-info" asp-action="Detail" asp-controller="Product" asp-route-id="@Model.Id" >Detail</a>
                </div>
            </div>
            </div>
