@model ShipperModel


 <fieldset>
    
         
    <form asp-controller="Shipper" asp-action="Create" method="post">
    <h1 style="color:goldenrod" class="display-12"> <center><em>Add New Shipper</em></center> </h1>
   
    <hr/>
    <div class="container col-sm-6">
        <div class="row">
            <div class="col">
                <div class="mb-4">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                <div class="mb-4">
                    <label asp-for="Phone"></label>
                    <input asp-for="Phone" class="form-control"/>
                    <span asp-validation-for="Phone" placeholder="Enter area code first" class="text-danger"></span>
                </div>
                </div>
                </div>
                </div>
           
       
        <div class="row">
            <div class="col">
                <input type="submit" value="Add Shipper" class="btn btn-primary" />
            </div>
        </div>
    </div>
   
</form>
</fieldset>
